body{
	margin: 0;
	padding: 0;
}

.swiper-container {
	width: 100%;
	height: 400px;
	margin: 20px auto 0;
}
	.swiper-container .swiper-slide{
		text-align: center;
	}
		.swiper-container .swiper-slide img{
			width: 100%;
			max-width: 320px;
		}
	.swiper-pagination {
		position: relative !important;
		text-align: center !important;
	}
		.swiper-pagination span{
			margin: 0 5px;
		}

.controllers{
	text-align: center;
}

	.controllers button.ctl{
		border: 2px solid;
		height: 44px;
		border-radius: 5px;
		font-size: 16px;
		font-weight: bold;
		box-sizing: border-box;
	}
	.controllers button.appTopButton{
		opacity: 0;
		margin-top: 15px;
		width: 80%;

		transition: opacity 0.5s;
		-webkit-transition: opacity 0.5s;

	}
		.controllers button.appTopButton.active{
			opacity: 1;
		}

	.controllers button.closeButton{
		margin-top: 10px;
		width: 50%;
		height: 30px;
		font-size: 14px;
	}
