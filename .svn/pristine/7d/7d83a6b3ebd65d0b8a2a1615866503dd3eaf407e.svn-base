.HIDE{
	display: none !important;
}
.INVISIBLE{
	opacity: 0;
}
.OPACITY-TRANSITION{
	-webkit-transition: -webkit-opacity 0.3s;
	transition: opacity 0.3s;
}


.APP-HEADER{
	position: fixed;
	height: 44px;
	line-height: 44px;
	top: 0px;
	left: 0px;
	right: 0px;
	z-index: 100;
	background-color: white;
}

#master-container-wrapper{
	position: relative;
	/*top: 44px;*/
	left: 0px;
	right: 0px;
	bottom: 0px;
	z-index: 1000;

}

.page{
	backface-visibility: hidden;
	display: inline-block;
	vertical-align: top;
	width: 100%;
	float: left;
	/*position: absolute;*/
	top: 0px;
	left: 0px;
	right: 0px;
	width: 100%;
	height: 100%;
}

.progress-screen{
	position: fixed;
	top: 0px;
	bottom: 0px;
	left: 0px;
	right: 0px;
	z-index: 9999;
	background-color: black;
	display: none;
	text-align: center;
	min-height: 1440px;

	-webkit-transition: -webkit-opacity 0.2s;
	transition: opacity 0.2s;
	opacity: 0;

	&.show{
		display: block;
	}
	&.visible{
		opacity: 0.3;
	}

	.progress-image{
		margin-top: 100px;
		vertical-align: middle;
		width: 80px;
		height: 80px;

		backface-visibility: hidden;

		//-webkit-animation-name: spin;
